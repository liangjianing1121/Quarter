<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.quarter.SettingActivity">


    <RelativeLayout
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#03A9F4">

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/y5"
            android:text="返回"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y5"
            android:text="设置"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <View
        android:id="@+id/she_v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#f0f0f0"
        android:layout_marginTop="@dimen/y25"/>

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/y35"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/she_tv_gengxin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="检查更新"
            android:textColor="@color/colorziti"
            android:layout_marginLeft="@dimen/x15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x20"
            android:text="0.1.1"
            android:textColor="@color/colorziti" />

        <ImageView
            android:id="@+id/she_img_gengxin"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/raw_1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#f0f0f0"
        android:layout_below="@+id/rl1"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x10"
        />


    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@+id/rl1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="意见反馈"
            android:layout_marginLeft="@dimen/x15"
            android:textColor="@color/colorziti" />



        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/raw_1" />

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="#f0f0f0"
        android:layout_below="@+id/rl2"/>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@+id/view2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="关于一刻钟"
            android:layout_marginLeft="@dimen/x15"
            android:textColor="@color/colorziti" />


        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/raw_1" />

    </RelativeLayout>


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#f0f0f0"
        android:layout_below="@+id/rl3"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x10"
        />
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_below="@+id/view3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="清除缓存"
            android:layout_marginLeft="@dimen/x15"
            android:textColor="@color/colorziti" />

        <TextView
            android:id="@+id/tv_huancun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/x20"
            android:textColor="@color/colorziti" />


        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:src="@drawable/raw_1" />

    </RelativeLayout>
    
    <Button
        android:id="@+id/bt_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_below="@+id/rl4"
        android:background="@drawable/bt_bg"
        android:text="退出登录"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/y5"/>



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff">

        <!--<RelativeLayout
           ">-->

        <ImageView
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:background="@drawable/leftfragment" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:layout_above="@+id/textView3"
            android:layout_alignLeft="@+id/relativeLayout5"
            android:layout_alignStart="@+id/relativeLayout5"
            fresco:roundAsCircle="true"
            android:layout_marginTop="@dimen/y25"
            app:placeholderImage="@drawable/head"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/y30"
            android:layout_above="@+id/relativeLayout5"
            android:layout_toLeftOf="@+id/tv_name"
            android:layout_toStartOf="@+id/tv_name"
            android:gravity="center"
            android:layout_marginBottom="@dimen/y15"
            android:text="编辑个性签名"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_leftname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y40"
            android:textColor="#fff"
            android:text="昵称"/>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv"
            android:src="@drawable/sex"
            android:layout_marginTop="@dimen/y35"/>


        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:background="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499933216" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:gravity="center"
                android:text="我的关注" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_alignLeft="@+id/relativeLayout5"
            android:layout_alignStart="@+id/relativeLayout5"
            android:layout_below="@+id/relativeLayout5"
            android:layout_marginRight="@dimen/x30">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499947358" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:gravity="center"
                android:text="我的收藏" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_alignLeft="@+id/relativeLayout6"
            android:layout_alignStart="@+id/relativeLayout6"
            android:layout_below="@+id/relativeLayout6"
            android:layout_marginRight="@dimen/x30">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499946865" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_toEndOf="@+id/imageView4"
                android:layout_toRightOf="@+id/imageView4"
                android:gravity="center"
                android:text="搜索好友" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relativeLayout8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout7"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x30"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499947389" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:gravity="center"
                android:text="消息通知" />

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/y15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1499943790" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y25"
            android:layout_marginEnd="46dp"
            android:layout_below="@+id/relativeLayout8"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/y100">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y30"
                android:layout_centerVertical="true"
                android:src="@drawable/raw_1500886654"
                android:layout_marginLeft="@dimen/x30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginStart="@dimen/x20"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView7"
                android:gravity="center"
                android:text="夜间模式" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/relativeLayout10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/ll_zuopin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/y25"
                    android:src="@drawable/raw_1499947056" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的作品" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shezhi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="@dimen/x25"
                    android:layout_height="@dimen/y25"
                    android:src="@drawable/raw_1499947157" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>
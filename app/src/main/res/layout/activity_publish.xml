<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    tools:context="com.example.dell.quarter.PublishActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y25"
        android:background="#03A9F4"
        android:id="@+id/include">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y5"
            android:text="取消"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/x5"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="创作"
            android:layout_marginTop="@dimen/y5"
            android:textColor="#ffffff"/>



    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_shipin"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/y75"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/image_bag"
        android:padding="@dimen/x25"
        android:src="@drawable/shipin1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_duanzi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y5"
        android:text="视频"
        android:textColor="#000"
        android:id="@+id/textView2" />



    <ImageView
        android:id="@+id/iv_duanzi"
        android:layout_width="@dimen/x110"
        android:layout_height="@dimen/y75"
        android:layout_alignLeft="@+id/iv_shipin"
        android:layout_alignStart="@+id/iv_shipin"
        android:layout_below="@+id/iv_shipin"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/image_bag"
        android:padding="@dimen/x25"
        android:src="@drawable/duanzi1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_duanzi"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="段子"
        android:textColor="#000"
        android:layout_marginBottom="@dimen/y5"/>



</RelativeLayout>

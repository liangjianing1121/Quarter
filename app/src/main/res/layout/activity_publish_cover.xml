<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2defa"
    tools:context="com.example.dell.quarter.PublishCoverActivity"
>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x250"
        android:scaleType="centerCrop"
        android:src="@drawable/yanhua"
        android:id="@+id/imageView9" />


    <ImageView
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/yun"
        android:id="@+id/iv_head" />

    <Button
        android:id="@+id/bt_cover"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y15"
        android:layout_alignBottom="@+id/iv_head"
        android:layout_alignLeft="@+id/iv_head"
        android:layout_alignStart="@+id/iv_head"
        android:background="#53C2F5"
        android:text="设置封面"
        android:textColor="#fff"
        android:textSize="10sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#8DA1F0"
        android:id="@+id/relativeLayout9">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同步分享至------"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x100" >

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:src="@drawable/successkongjian"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ空间"
                android:textColor="#fff"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x150" >

            <ImageView
                android:layout_width="@dimen/x25"
                android:layout_height="@dimen/x25"
                android:src="@drawable/successpengyou"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:textColor="#fff"
                android:textSize="10sp"/>

        </LinearLayout>


    </RelativeLayout>



    <EditText
        android:id="@+id/et_desc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageView9"
    android:hint="点击输入视频简介"
    android:textSize="10sp"
    android:background="@null"
    android:layout_marginTop="@dimen/y10"
    android:textColor="#fff"/>




        <Button
            android:id="@+id/bt_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发布"
            android:background="#29B6F6"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/y10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:drawableLeft="@drawable/fh"
            android:gravity="center"
            android:padding="@dimen/x3"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="预览"
            android:textColor="#fff"
            android:textSize="15sp" />


    </RelativeLayout>

</RelativeLayout>
